        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type catvm:CatalogVM}">
                <catv:CatalogView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type hubvm:HubVM}">
                <hubv:HubView />
            </DataTemplate>
        </ContentControl.Resources>
        <ContentControl.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform />
                <TranslateTransform />
            </TransformGroup>
        </ContentControl.RenderTransform>
    </ContentControl>
</UserControl>
